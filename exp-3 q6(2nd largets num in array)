# Find out the 2nd highest number in the unsorted array.

echo "Enter array elements separated by space:"
read -a arr

max=${arr[0]}
second_max=${arr[0]}

for num in "${arr[@]}"
do
    if (( num > max )); then
        second_max=max
        max=num
    elif (( num < max && num > second_max )); then
        second_max=num
    fi
done

# Check if second_max is still equal to max
if (( second_max == max )); then
    echo "There is no distinct second highest number."
else
    echo "Second highest number is: $second_max"
fi

# OUTPUT 
: '
Enter array elements separated by space:
10 20 30 40
Second highest number is: 30
'
